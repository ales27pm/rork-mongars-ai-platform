
# --- BEGIN: RubyGems and cocoapods-spm bootstrap ---
require 'rbconfig'
require 'rubygems'
require 'fileutils'

# EAS runs build phases in separate processes, and env exports from pre-install hooks
# don't reliably carry into the CocoaPods phase. Ensure RubyGems can see the gems we
# installed (including cocoapods-spm) by force-setting GEM_HOME/GEM_PATH here.
arch = if RbConfig::CONFIG['host_cpu']&.include?('arm')
  'arm64'
else
  RbConfig::CONFIG['host_cpu']
end
home_dir = ENV.fetch('HOME', Dir.home)
fallback_gem_home = File.join(home_dir, '.gems', arch)

gem_home = ENV['GEM_HOME']
gem_home_under_home = gem_home && !gem_home.empty? && gem_home.start_with?(home_dir)
gem_home_writable = if gem_home.nil? || gem_home.empty?
  false
elsif File.exist?(gem_home)
  File.writable?(gem_home)
else
  File.writable?(File.dirname(gem_home))
end

ENV['GEM_HOME'] = fallback_gem_home unless gem_home_under_home && gem_home_writable
FileUtils.mkdir_p(ENV['GEM_HOME'])

ENV['GEM_PATH'] = [ENV['GEM_HOME'], ENV['GEM_PATH']].compact.reject(&:empty?).join(':')

# Rebuild RubyGems internal paths now that we've set GEM_HOME/GEM_PATH.
Gem.use_paths(ENV['GEM_HOME'], ENV['GEM_PATH'].split(':'))
Gem.refresh

def ensure_cocoapods_spm_gem_version!(specs)
  specs.each do |spec|
    gem_version_path = File.join(spec.gem_dir, 'lib', 'cocoapods-spm', 'gem_version.rb')
    next if File.exist?(gem_version_path)

    FileUtils.mkdir_p(File.dirname(gem_version_path))
    File.write(gem_version_path, "module CocoapodsSpm\n  GEM_VERSION = '#{spec.version}'\nend\n")
    puts "[Podfile] patched cocoapods-spm gem_version.rb at #{gem_version_path}"
  end
end

def ensure_cocoapods_spm_installed!(gem_home)
  spm_version = ENV.fetch('COCOAPODS_SPM_VERSION', '0.1.20')
  specs = Gem::Specification.find_all_by_name('cocoapods-spm')
  return specs unless specs.empty?

  puts "[Podfile] cocoapods-spm missing. Attempting install cocoapods-spm@#{spm_version} into #{gem_home}â€¦"
  install_ok = system(
    { 'GEM_HOME' => gem_home, 'GEM_PATH' => ENV['GEM_PATH'] },
    RbConfig.ruby,
    '-S',
    'gem',
    'install',
    'cocoapods-spm',
    '-v',
    spm_version,
    '--no-document'
  )

  unless install_ok
    raise <<~MSG
      cocoapods-spm must be available before pod install.
      Auto-install attempt failed.

      GEM_HOME: #{gem_home}
      GEM_PATH: #{ENV['GEM_PATH']}
    MSG
  end

  Gem.refresh
  Gem::Specification.find_all_by_name('cocoapods-spm')
end

specs = ensure_cocoapods_spm_installed!(ENV['GEM_HOME'])
ensure_cocoapods_spm_gem_version!(specs)
require 'cocoapods-spm'

plugin 'cocoapods-spm'

unless defined?(spm_pkg)
  raise 'cocoapods-spm is not loaded (spm_pkg undefined). Tokenizers/MLX SPM deps cannot be installed.'
end

require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), 'scripts/autolinking')
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), 'scripts/react_native_pods')

require 'json'
podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

def ccache_enabled?(podfile_properties)
  # Environment variable takes precedence
  return ENV['USE_CCACHE'] == '1' if ENV['USE_CCACHE']
  # Fall back to Podfile properties
  podfile_properties['apple.ccacheEnabled'] == 'true'
end
# --- END: RubyGems and cocoapods-spm bootstrap ---

ENV['RCT_NEW_ARCH_ENABLED'] ||= '0' if podfile_properties['newArchEnabled'] == 'false'
ENV['EX_DEV_CLIENT_NETWORK_INSPECTOR'] ||= podfile_properties['EX_DEV_CLIENT_NETWORK_INSPECTOR']
ENV['RCT_USE_RN_DEP'] ||= '1' if podfile_properties['ios.buildReactNativeFromSource'] != 'true' && podfile_properties['newArchEnabled'] != 'false'
ENV['RCT_USE_PREBUILT_RNCORE'] ||= '1' if podfile_properties['ios.buildReactNativeFromSource'] != 'true' && podfile_properties['newArchEnabled'] != 'false'
platform :ios, podfile_properties['ios.deploymentTarget'] || '15.1'

prepare_react_native_project!

target 'monGARS' do
  use_expo_modules!

  spm_pkg 'mlx-swift',
    :git => 'https://github.com/ml-explore/mlx-swift',
    :commit => '072b684acaae80b6a463abab3a103732f33774bf',
    :products => ['MLX', 'MLXRandom', 'MLXNN', 'MLXOptimizers', 'MLXFFT', 'MLXLinalg', 'MLXFast']
  spm_pkg 'mlx-swift-examples',
    :git => 'https://github.com/ml-explore/mlx-swift-examples',
    :commit => '9bff95ca5f0b9e8c021acc4d71a2bbe4a7441631',
    :products => ['MLXLLM', 'MLXVLM', 'MLXLMCommon', 'MLXMNIST', 'MLXEmbedders', 'StableDiffusion']
  spm_pkg 'swift-transformers',
    :git => 'https://github.com/huggingface/swift-transformers',
    :version => '1.0.0',
    :products => ['Tokenizers', 'Transformers']

  pod 'NativeLLM', :path => '../modules/native-llm/ios'

  if ENV['EXPO_USE_COMMUNITY_AUTOLINKING'] == '1'
    config_command = ['node', '-e', "process.argv=['', '', 'config'];require('@react-native-community/cli').run()"]
  else
    config_command = [
      'node',
      '--no-warnings',
      '--eval',
      "require(require.resolve('expo-modules-autolinking', { paths: [require.resolve('expo/package.json')] }))(process.argv.slice(1))",
      'react-native-config',
      '--json',
      '--platform',
      'ios'
    ]
  end

  config = use_native_modules!(config_command)

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => podfile_properties['expo.jsEngine'] == nil || podfile_properties['expo.jsEngine'] == 'hermes',
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :privacy_file_aggregation_enabled => podfile_properties['apple.privacyManifestAggregationEnabled'] != 'false'
  )

  use_frameworks! :linkage => podfile_properties['ios.useFrameworks'].to_sym if podfile_properties['ios.useFrameworks']

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      :ccache_enabled => ccache_enabled?(podfile_properties)
    )

    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = podfile_properties['ios.deploymentTarget'] || '15.1'
      end
    end
  end
end
